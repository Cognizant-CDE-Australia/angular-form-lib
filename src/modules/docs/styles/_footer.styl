/*
 * Footer
 *
 * Separated section of content at the bottom of all pages, save the homepage.
 */

.bs-footer
  padding-top: 30px
  padding-bottom: 30px
  margin-top: 100px
  color: hsl(0, 0%, 47%)
  text-align: center
  border-top: 1px solid hsl(0, 0%, 90%)

.footer-links
  margin: 10px 0
  padding-left: 0

.footer-links li
  display: inline
  padding: 0 2px

.footer-links li:first-child
  padding-left: 0


@media (min-width: 768px)
  .bs-footer
    text-align: left

  .bs-footer p
    margin-bottom: 0


